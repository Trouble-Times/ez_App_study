<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BtnActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/btn_click_native"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Native方法调用"
            android:paddingHorizontal="32dp"
            android:paddingVertical="16dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_click_java"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java方法调用"
            android:paddingHorizontal="32dp"
            android:paddingVertical="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- 新增的5个按钮 -->
        <Button
            android:id="@+id/btn_InnerClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内部类"
            android:paddingHorizontal="32dp"
            android:paddingVertical="16dp"
            android:layout_marginBottom="16dp"/>
            
        <Button
            android:id="@+id/btn_OnCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="构造函数"
            android:paddingHorizontal="32dp"
            android:paddingVertical="16dp"
            android:layout_marginBottom="16dp"/>
            
        <Button
            android:id="@+id/btn_Reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重载函数"
            android:paddingHorizontal="32dp"
            android:paddingVertical="16dp"
            android:layout_marginBottom="16dp"/>
            
        <Button
            android:id="@+id/btn_Implements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接口实现"
            android:paddingHorizontal="32dp"
            android:paddingVertical="16dp"
            android:layout_marginBottom="16dp"/>
            
        <Button
            android:id="@+id/btn_Thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多线程"
            android:paddingHorizontal="32dp"
            android:paddingVertical="16dp"
            android:layout_marginBottom="16dp"/>
            
        <Button
            android:id="@+id/btn_Toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hook系统Toast"
            android:paddingHorizontal="32dp"
            android:paddingVertical="16dp"
            android:layout_marginBottom="16dp"/>
        
    </LinearLayout>

    <!-- 底部导航栏保持不变 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/cardview_light_background"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>